<% if @product.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>
    <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @product, local: true do |f|%>
  <div class="field">
    <%= f.label :title, "日用品の名前" %><br />
    <%= f.text_field :title, id:"prototype_title" %>
  </div>

  <div class="field">
    <%= f.label :stock, "残りのストック数" %><br />
    <%= f.text_area :stock, class: :form__text, id:"prototype_catch_copy" %>
  </div>

  <div class="field">
    <%= f.label :price, "価格" %><br />
    <%= f.text_area :price, class: :form__text, id:"prototype_concept" %>
  </div>

  <div class="field">
    <%= f.label :memo, "メモ（任意）" %><br />
    <%= f.text_area :memo, class: :form__text, id:"prototype_concept" %>
  </div>

  <div class="field">
    <%= f.label :category_id, "カテゴリー" %><br />
    <%= f.select :category_id, options_for_select(Category.all.map{ |c| [c.kinds, c.id] }), {}, id: "prototype_category" %>
  </div>

  <div class="field">
    <%= f.label :image, "日用品の画像" %><br />
    <%= f.file_field :image, id:"prototype_image" %>
  </div>

  <div class="actions">
    <%= f.submit "保存する", class: :form__btn  %>
  </div>
<% end %>